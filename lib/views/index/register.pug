include ../_alert.pug
html
  head
    include ../_head.pug
  body(style='background-color:#eee')
    .container
      h1.text-center: a(href='/') rods-blog
      form.form-signin(method='POST')
        +alert()
        h2.form-signin-heading.text-center Register
        label.sr-only(for='inputEmail') Email address
        input#inputEmail.form-control(type='text', name='name', placeholder='Full Name', required='', autofocus='')
        label.sr-only(for='inputEmail') Email address
        input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required='')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='')
        label.sr-only(for='inputConfirmPassword') Confirm Password
        input#inputConfirmPassword.form-control(type='password', name='confirmPassword', placeholder='Confirm Password', required='')
        button.btn.btn-lg.btn-warning.btn-block(type='submit') Register
        br
        p= "Have an Account? "
          a(href='/login') Login
    include ../_foot.pug
