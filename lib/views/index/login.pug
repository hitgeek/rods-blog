include ../_alert.pug

html
  head
    include ../_head.pug
  body(style='background-color:#eee')
    .container
      h1.text-center: a(href='/') rods-blog
      form.form-signin(method='POST')
        +alert()
        h2.form-signin-heading.text-center Login
        label.sr-only(for='inputEmail') Email address
        input#inputEmail.form-control(type='email', name='username', placeholder='Email address', required='', autofocus='')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='')
        button.btn.btn-lg.btn-success.btn-block(type='submit') Log In
        br
        p= "Need an Account? "
          a(href='/register') Register
    include ../_foot.pug
